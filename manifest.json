{
    "manifest_version": 3,
    "name": "free forocarros",
    "description": "Frees our forum from social media bs",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon.png"
    },
    "permissions": [ "storage","tabs","activeTab","webRequest", "declarativeNetRequest"],
    "content_scripts": [
        {
            "matches": ["https://forocoches.com/foro/forumdisplay.php?f=*","https://forocoches.com/foro/showthread.php?*"],
            "js": ["blocker-script.js"]
        }
    ],
    "background": {
        "service_worker": "listener.js"
    },
    "commands": {
        "mode": {
            "suggested_key": {
                "default": "Ctrl+M"
            },
            "description": "Switch mode"
        }
    },
    "host_permissions": [
        "*://forocoches.com/*"
    ]
  }